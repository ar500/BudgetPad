@using BudgetPad.Shared.Services.BudgetFunds
@inject IModalService Modal
@inject HttpClient Http

<div class="card">
    <div class="card-header">
        <span class="text-muted text-sm-left align-text-bottom">Category Breakdown</span>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card-img-top" style="background-color: darkslategrey;">
                    <span>Chart area</span>
                </div>
            </div>
        </div>
        @foreach (var category in CategoryGroups)
        {
            <div class="row mb-0">
                <div class="col-md-4">
                    <span class="card-text text-dark">@category.Category</span>
                </div>
                <div class="col-md-4 text-dark">
                    <span class="card-text">@category.TotalFunds.ToString("C")</span>
                </div>
                <div class="col-md-4 text-md-center">
                    <p>Histogram1</p>
                </div>
            </div>
        }
    </div>
</div>

@functions { 

    [Parameter]
    private IEnumerable<FundsInCategoryModel> CategoryGroups { get; set; }

    protected override async Task OnInitAsync()
    {
        
    }
}